@page
@model MicroServices.Web.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<p>
    <a class="btn btn-sm btn-success" asp-page="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-page="./Edit"
                       asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger"
                       asp-page-handler="Delete"
                       asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>